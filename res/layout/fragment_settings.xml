<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/match_wrap"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            style="@style/match_wrap"
            android:orientation="vertical" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:text="Account Verification"
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:layout_marginTop="5dp"
                android:text="Verifying your account is NOT required,BUT is"
                android:textColor="@color/settings_verification_yr_ac_color"
                android:textSize="13sp"
                app:ctypeface="GlyphaLTStd.otf" />

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:text="highly recommended"
                android:textColor="#ed1c24"
                android:textSize="13sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="horizontal" >

                <com.wecamchat.aviddev.util.view.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Account verification allows you to save and move your account to a new device and much more..."
                    android:textColor="@color/settings_verification_yr_ac_color"
                    android:textSize="13sp"
                    app:ctypeface="GlyphaLTStd.otf" />

                <com.wecamchat.aviddev.util.view.CustomTextView
                    android:id="@+id/tv_settings_verify_now"
                    style="@style/wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/setting_verify_now_text_rect"
                    android:padding="5dp"
                    android:text="VERIFY NOW"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:ctypeface="GlyphaLTStd.otf" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:text="Subscriptions  Purchase"
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:text="ManCrunch PRO Account includes..."
                android:textColor="@color/settings_mancruch_color"
                android:textSize="16sp"
                app:ctypeface="GlyphaLTStd.otf" />

            <LinearLayout
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap_content"
                    android:background="@drawable/blue_list_tick_ic" />

                <com.wecamchat.aviddev.util.view.CustomTextView
                    style="@style/wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Unlimited Winks,Favorites,Messaging &amp; Photo/ Video sharing"
                    android:textColor="@color/settings_verification_yr_ac_color"
                    android:textSize="13sp"
                    app:ctypeface="GlyphaLTStd.otf" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap_content"
                    android:background="@drawable/blue_list_tick_ic" />

                <com.wecamchat.aviddev.util.view.CustomTextView
                    style="@style/wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="200 Minutes/Month- Phone &amp; Video Calling"
                    android:textColor="@color/settings_verification_yr_ac_color"
                    android:textSize="13sp"
                    app:ctypeface="GlyphaLTStd.otf" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/blue_list_tick_ic" />

                <com.wecamchat.aviddev.util.view.CustomTextView
                    style="@style/wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Custom Cover Photo"
                    android:textColor="@color/settings_verification_yr_ac_color"
                    android:textSize="13sp"
                    app:ctypeface="GlyphaLTStd.otf" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.wecamchat.aviddev.util.view.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Subscription"
                    android:textColor="@color/settings_ac_verification_color"
                    android:textSize="17sp"
                    app:ctypeface="GlyphaLTStd.otf" />

                <CheckBox
                    style="@style/wrap_content"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/selector_setting_active_toggle_button"
                    android:button="@null" />
            </LinearLayout>

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/wrap_content"
                android:layout_marginTop="5dp"
                android:text="Restore Sticker Packs"
                android:textColor="@color/settings_mancruch_color"
                android:textSize="16sp"
                app:ctypeface="GlyphaLTStd.otf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:text="Secutity Code"
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:layout_marginTop="5dp"
                android:text="Secure this app with a 4-digit pin.It will prompt you to enter this code everytime you launch this app."
                android:textColor="@color/settings_verification_yr_ac_color"
                android:textSize="13sp"
                app:ctypeface="GlyphaLTStd.otf" />

            <LinearLayout
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.wecamchat.aviddev.util.view.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable PIN Code"
                    app:ctypeface="GlyphaLTStd.otf" />

                <CheckBox
                    android:id="@+id/cb_seetings_passcode"
                    style="@style/wrap_content"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/selector_setting_active_toggle_button"
                    android:button="@null" />
            </LinearLayout>

            <com.wecamchat.aviddev.util.view.CustomTextView
                android:id="@+id/tv_settings_change_passcode"
                style="@style/match_wrap"
                android:layout_marginTop="5dp"
                android:text="Change Security PIN"
                android:textColor="@color/settings_mancruch_color"
                android:textSize="16sp" />

            <LinearLayout
                style="@style/match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <com.wecamchat.aviddev.util.view.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Use Touch ID"
                    app:ctypeface="GlyphaLTStd.otf" />

                <CheckBox
                    android:id="@+id/fragment_filter_hide_location_toggleButton"
                    style="@style/wrap_content"
                    android:layout_marginRight="@dimen/small_padding"
                    android:background="@drawable/selector_setting_disable_toggle_button"
                    android:button="@null" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Display distance"
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <RadioGroup
                android:id="@+id/rg_setting_mile_kilometers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RadioButton
                    android:id="@+id/rb_settings_miles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@null"
                    android:button="@drawable/selector_setting_active_check_button"
                    android:paddingLeft="5dp"
                    android:text="Miles (MI)"
                    android:textColor="@color/user_profile_detail_color"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rb_settings_kilometers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@null"
                    android:button="@drawable/selector_setting_active_check_button"
                    android:checked="true"
                    android:paddingLeft="5dp"
                    android:text="Kilometers (KM)"
                    android:textColor="@color/user_profile_detail_color"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            style="@style/wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                style="@style/match_wrap"
                android:layout_marginBottom="5dp"
                android:text="I normally hold my device with..."
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />

            <RadioGroup
                android:id="@+id/rg_settings_hand_prefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <RadioButton
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@null"
                    android:button="@drawable/selector_setting_diactive_check_button"
                    android:paddingLeft="5dp"
                    android:text="Left Hand"
                    android:textColor="@color/user_profile_detail_color"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@null"
                    android:button="@drawable/selector_setting_active_check_button"
                    android:checked="true"
                    android:paddingLeft="5dp"
                    android:text="Right Hand"
                    android:textColor="@color/user_profile_detail_color"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <com.wecamchat.aviddev.util.view.CustomTextView
            style="@style/wrap_content"
            android:layout_marginTop="10dp"
            android:text="Help Support"
            android:textColor="@color/settings_ac_verification_color"
            android:textSize="17sp"
            android:textStyle="bold"
            app:ctypeface="GlyphaLTStd.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <com.wecamchat.aviddev.util.view.CustomTextView
            style="@style/wrap_content"
            android:layout_marginTop="10dp"
            android:text="About"
            android:textColor="@color/settings_ac_verification_color"
            android:textSize="17sp"
            android:textStyle="bold"
            app:ctypeface="GlyphaLTStd.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/ll_app_version_details"
            style="@style/wrap_content"
            android:layout_marginTop="10dp" >

            <com.wecamchat.aviddev.util.view.CustomTextView
                android:id="@+id/tv_app_version_details"
                style="@style/wrap_content"
                android:gravity="center_vertical"
                android:text="@string/fragment_app_version_details"
                android:textColor="@color/settings_ac_verification_color"
                android:textSize="17sp"
                android:textStyle="bold"
                app:ctypeface="GlyphaLTStd.otf" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>