<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/my_profile_detail_color" >

    <RelativeLayout
        android:id="@+id/ll_my_profile_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_my_profile_primary_pic"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:layout_centerHorizontal="true" />

        <SurfaceView
            android:id="@+id/iv_my_profile_primary_pic_surface_view"
            android:layout_width="211dp"
            android:layout_height="211dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/surface_view_png"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_my_profile_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_btn"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_my_profile_linear"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_my_profile_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profile_camera_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/profile_pic_cam_ic" />
    </LinearLayout>

</RelativeLayout>