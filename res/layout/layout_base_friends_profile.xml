<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color_code" >

    <com.wecamchat.aviddev.util.view.CustomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:id="@+id/user_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/layout_friends_profile_header_root"
                layout="@layout/layout_friends_profile_header"
                android:background="@null" />

            <include layout="@layout/layout_friend_profile_headline_bar" />

            <include layout="@layout/layout_friends_profile_body" />
        </LinearLayout>
    </com.wecamchat.aviddev.util.view.CustomScrollView>

